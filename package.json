{
  "name": "markditor",
  "version": "0.1.0",
  "main": "dist-electron/main/index.js",
  "description": "A [mark]down e[ditor] that features in WYSIWYG mode.",
  "author": "greyovo <grey@foxmail.com>",
  "license": "MIT",
  "private": true,
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
