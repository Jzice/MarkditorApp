    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/themes": "^2.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "electron-updater": "^6.1.1",
    "react-resizable-panels": "^1.0.9",
    "sonner": "^1.3.1",
