{
  "build": {
    "beforeBuildCommand": "npm run build:before_tauri",
    "beforeDevCommand": "npm run dev:before_tauri",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Markditor",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [
          "**/*",
          "**\\*",
          "*:\\**\\*",
          "*:/**/*"
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "**/*"
        ],
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "locate-file-win",
            "cmd": "Explorer",
            "args": [
              "/select,",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "locate-folder-win",
            "cmd": "Explorer",
            "args": [
              "/root,",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "set-default-open-win",
            "cmd": "Explorer",
            "args": [
              "/root,",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "Me.GreyApps.Markditor",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "fragmentPaths": [
            "config\\wix-config.wxs"
          ],
          "componentRefs": [
            "Entries1",
            "Entries2",
            "Entries3"
          ]
        }
      }
    },
    "updater": {
      "active": false
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "decorations": false,
        "height": 600,
        "resizable": true,
        "title": "Markditor",
        "transparent": true,
        "width": 1000
      }
    ],
    "cli": {
      "description": "Markditor CLI",
      "longDescription": "Markditor App CLI.",
      "args": [
        {
          "name": "source",
          "description": "The source path of a markdown file.",
          "index": 1,
          "takesValue": true,
          "required": false
        }
      ]
    }
  }
}
